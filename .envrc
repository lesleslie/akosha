# Akasha Direnv Configuration
layout uv

# Environment variables
export AKASHA_HOT_PATH="/data/akasha/hot"
export AKASHA_WARM_PATH="/data/akasha/warm"
export AKASHA_COLD_BUCKET="akasha-cold-data"

# Redis configuration
export REDIS_HOST="localhost"
export REDIS_PORT="6379"
export REDIS_DB="0"

# Oneiric storage
export ONEIRIC_STORAGE_BACKEND="s3"
export S3_BUCKET="akasha-cold-data"
export S3_REGION="us-west-2"

# API configuration
export AKASHA_API_PORT="8000"
export AKASHA_MCP_PORT="3001"

# Development
export AKASHA_DEBUG="false"
export AKASHA_LOG_LEVEL="INFO"
