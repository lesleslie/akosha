# Akosha Direnv Configuration
layout uv

# Environment variables
export AKOSHA_HOT_PATH="/data/akosha/hot"
export AKOSHA_WARM_PATH="/data/akosha/warm"
export AKOSHA_COLD_BUCKET="akosha-cold-data"

# Redis configuration
export REDIS_HOST="localhost"
export REDIS_PORT="6379"
export REDIS_DB="0"

# Oneiric storage
export ONEIRIC_STORAGE_BACKEND="s3"
export S3_BUCKET="akosha-cold-data"
export S3_REGION="us-west-2"

# API configuration
export AKOSHA_API_PORT="8000"
export AKOSHA_MCP_PORT="3001"

# Development
export AKOSHA_DEBUG="false"
export AKOSHA_LOG_LEVEL="INFO"
