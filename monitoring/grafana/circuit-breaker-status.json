{
  "dashboard": {
    "description": "Monitor circuit breaker states and resilience metrics",
    "panels": [
      {
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 0
        },
        "id": 1,
        "targets": [
          {
            "expr": "sum(circuit_state{state=\"0\"})",
            "legendFormat": "OPEN",
            "refId": "A"
          },
          {
            "expr": "sum(circuit_state{state=\"1\"})",
            "legendFormat": "CLOSED",
            "refId": "B"
          },
          {
            "expr": "sum(circuit_state{state=\"2\"})",
            "legendFormat": "HALF_OPEN",
            "refId": "C"
          }
        ],
        "title": "Circuit Breaker States",
        "type": "stat"
      },
      {
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "max": 1,
            "min": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 0.5
                },
                {
                  "color": "green",
                  "value": 0.8
                }
              ]
            },
            "unit": "percentunit"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "id": 2,
        "targets": [
          {
            "expr": "circuit_success_rate{service_name=\"$service\"}",
            "legendFormat": "{{service_name}}",
            "refId": "A"
          }
        ],
        "title": "Service Success Rates",
        "type": "gauge"
      },
      {
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 1000
                },
                {
                  "color": "red",
                  "value": 5000
                }
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "id": 3,
        "targets": [
          {
            "expr": "sum(circuit_total_calls) by (service_name)",
            "legendFormat": "{{service_name}}",
            "refId": "A"
          }
        ],
        "title": "Total Calls by Service",
        "type": "bargauge"
      },
      {
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "id": 4,
        "targets": [
          {
            "expr": "sum(circuit_successful_calls)",
            "legendFormat": "Successful",
            "refId": "A"
          },
          {
            "expr": "sum(circuit_failed_calls)",
            "legendFormat": "Failed",
            "refId": "B"
          },
          {
            "expr": "sum(circuit_rejected_calls)",
            "legendFormat": "Rejected",
            "refId": "C"
          }
        ],
        "title": "Call Success/Failure Ratio",
        "type": "piechart"
      },
      {
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 3
                },
                {
                  "color": "red",
                  "value": 5
                }
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        },
        "id": 5,
        "targets": [
          {
            "expr": "circuit_consecutive_failures",
            "legendFormat": "{{service_name}}",
            "refId": "A"
          }
        ],
        "title": "Consecutive Failures by Service",
        "type": "bargauge"
      },
      {
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 24
        },
        "id": 6,
        "targets": [
          {
            "expr": "circuit_consecutive_failures >= 3",
            "format": "table",
            "legendFormat": "{{service_name}}",
            "refId": "A"
          }
        ],
        "title": "Recent Circuit Breaker Trips",
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true
              },
              "indexByName": {
                "Value": 1,
                "service_name": 0
              },
              "renameByName": {
                "Value": "Failures",
                "service_name": "Service"
              }
            }
          }
        ],
        "type": "table"
      }
    ],
    "refresh": "15s",
    "schemaVersion": 16,
    "tags": [
      "akosha",
      "circuit-breaker",
      "resilience"
    ],
    "timezone": "browser",
    "title": "Akosha Circuit Breaker Status",
    "version": 0
  }
}
