{
  "dashboard": {
    "panels": [
      {
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "id": 1,
        "targets": [
          {
            "expr": "sum(rate(akosha_query_requests_total[1m]))",
            "legendFormat": "QPS",
            "refId": "qps"
          }
        ],
        "title": "Queries Per Second",
        "type": "graph",
        "yAxes": [
          {
            "label": "Queries / sec",
            "min": 0
          }
        ]
      },
      {
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "id": 2,
        "targets": [
          {
            "expr": "histogram_quantile(0.50, akosha_query_duration_seconds)",
            "legendFormat": "P50"
          },
          {
            "expr": "histogram_quantile(0.95, akosha_query_duration_seconds)",
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.99, akosha_query_duration_seconds)",
            "legendFormat": "P99"
          }
        ],
        "title": "Query Latency Distribution",
        "type": "graph",
        "yAxes": [
          {
            "label": "Latency (seconds)",
            "min": 0
          }
        ]
      },
      {
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "id": 3,
        "targets": [
          {
            "expr": "sum(rate(akosha_query_cache_hits_total[1m])) by (cache_level) / sum(rate(akosha_query_cache_hits_total[1m]))",
            "legendFormat": "{{cache_level}}",
            "refId": "cacheHitRate"
          }
        ],
        "title": "Cache Hit Rate",
        "type": "graph",
        "yAxes": [
          {
            "label": "Cache Hit Rate",
            "max": 1,
            "min": 0,
            "unit": "percentunit"
          }
        ]
      },
      {
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "id": 4,
        "targets": [
          {
            "expr": "avg(akosha_query_results_size)",
            "legendFormat": "Avg Results",
            "refId": "avgResults"
          }
        ],
        "title": "Average Result Count",
        "type": "graph",
        "yAxes": [
          {
            "label": "Average Result Count",
            "min": 0
          }
        ]
      },
      {
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "id": 5,
        "targets": [
          {
            "expr": "up{job='akosha-shard'}",
            "format": "table",
            "instant": true,
            "legendFormat": "Shard {{shard}}",
            "refId": "shardHealth"
          }
        ],
        "title": "Shard Health",
        "transformations": [
          {
            "id": "organize",
            "options": {
              "displayMode": "allTables"
            }
          }
        ],
        "type": "table"
      },
      {
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        },
        "id": 6,
        "targets": [
          {
            "expr": "sum(rate(akosha_query_requests_total{status='error'}[1m])) / sum(rate(akosha_query_requests_total[1m]))",
            "legendFormat": "Error Rate",
            "refId": "queryErrorRate"
          }
        ],
        "title": "Query Error Rate",
        "type": "graph",
        "yAxes": [
          {
            "label": "Error Rate",
            "max": 1,
            "min": 0,
            "unit": "percentunit"
          }
        ]
      }
    ],
    "refresh": "10s",
    "schemaVersion": 16,
    "tags": [
      "akosha",
      "query"
    ],
    "timezone": "UTC",
    "title": "Akosha Query Dashboard",
    "version": 0
  }
}
