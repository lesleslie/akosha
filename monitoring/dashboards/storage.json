{
  "dashboard": {
    "panels": [
      {
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 0
        },
        "id": 1,
        "targets": [
          {
            "expr": "akosha_hot_store_size_bytes / 1024 / 1024 / 1024",
            "legendFormat": "Hot Store (GB)",
            "refId": "hotStoreSize"
          }
        ],
        "title": "Hot Store Size",
        "type": "graph",
        "yAxes": [
          {
            "label": "Size (GB)",
            "min": 0
          }
        ]
      },
      {
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 0
        },
        "id": 2,
        "targets": [
          {
            "expr": "akosha_hot_store_record_count",
            "legendFormat": "Hot Records",
            "refId": "hotRecordCount"
          }
        ],
        "title": "Hot Store Record Count",
        "type": "graph",
        "yAxes": [
          {
            "label": "Record Count",
            "min": 0
          }
        ]
      },
      {
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 0
        },
        "id": 3,
        "targets": [
          {
            "expr": "akosha_warm_store_size_bytes / 1024 / 1024 / 1024",
            "legendFormat": "Warm Store (GB)",
            "refId": "warmStoreSize"
          }
        ],
        "title": "Warm Store Size",
        "type": "graph",
        "yAxes": [
          {
            "label": "Size (GB)",
            "min": 0
          }
        ]
      },
      {
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 8
        },
        "id": 4,
        "targets": [
          {
            "expr": "akosha_warm_store_record_count",
            "legendFormat": "Warm Records",
            "refId": "warmRecordCount"
          }
        ],
        "title": "Warm Store Record Count",
        "type": "graph",
        "yAxes": [
          {
            "label": "Record Count",
            "min": 0
          }
        ]
      },
      {
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 8
        },
        "id": 5,
        "targets": [
          {
            "expr": "akosha_cold_store_size_bytes / 1024 / 1024 / 1024",
            "legendFormat": "Cold Store (TB)",
            "refId": "coldStoreSize"
          }
        ],
        "title": "Cold Store Size",
        "type": "graph",
        "yAxes": [
          {
            "label": "Size (TB)",
            "min": 0
          }
        ]
      },
      {
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 8
        },
        "id": 6,
        "targets": [
          {
            "expr": "rate(akosha_migration_records_total{status='success'}[1m])",
            "legendFormat": "Records / sec",
            "refId": "migrationThroughput"
          }
        ],
        "title": "Migration Throughput",
        "type": "graph",
        "yAxes": [
          {
            "label": "Records / sec",
            "min": 0
          }
        ]
      },
      {
        "fieldConfig": {
          "defaults": {
            "decimals": 2,
            "unit": "currencyUSD"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 16
        },
        "id": 7,
        "targets": [
          {
            "expr": "(akosha_hot_store_size_bytes * 0.0002 + akosha_warm_store_size_bytes * 0.00005 + akosha_cold_store_size_bytes * 0.00001) / 1024 / 1024 / 1024",
            "legendFormat": "Monthly Cost ($)",
            "refId": "storageCost"
          }
        ],
        "title": "Storage Cost Estimate",
        "type": "stat"
      },
      {
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 16
        },
        "id": 8,
        "targets": [
          {
            "expr": "histogram_quantile(0.95, akosha_migration_duration_seconds) / 60",
            "legendFormat": "P95 (minutes)",
            "refId": "migrationDuration"
          }
        ],
        "title": "Migration Duration",
        "type": "graph",
        "yAxes": [
          {
            "label": "Duration (minutes)",
            "min": 0
          }
        ]
      },
      {
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 16
        },
        "id": 9,
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "showLegend": true,
            "values": [
              {
                "name": "Hot",
                "query": "akosha_hot_store_size_bytes"
              },
              {
                "name": "Warm",
                "query": "akosha_warm_store_size_bytes"
              },
              {
                "name": "Cold",
                "query": "akosha_cold_store_size_bytes"
              }
            ]
          }
        },
        "targets": [
          {
            "expr": "akosha_hot_store_size_bytes + akosha_warm_store_size_bytes + akosha_cold_store_size_bytes",
            "legendFormat": "{{tier}}",
            "refId": "storageBreakdown"
          }
        ],
        "title": "Storage Breakdown",
        "type": "piechart"
      }
    ],
    "refresh": "30s",
    "schemaVersion": 16,
    "tags": [
      "akosha",
      "storage"
    ],
    "timezone": "UTC",
    "title": "Akosha Storage Dashboard",
    "version": 0
  }
}
